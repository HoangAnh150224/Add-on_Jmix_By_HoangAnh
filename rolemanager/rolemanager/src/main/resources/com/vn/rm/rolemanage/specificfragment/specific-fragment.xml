<?xml version="1.0" encoding="UTF-8"?>
<fragment xmlns="http://jmix.io/schema/flowui/fragment">

    <data>
        <instance id="roleModelDc" class="io.jmix.security.model.ResourceRoleModel">
            <collection id="resourcePoliciesDc" property="resourcePolicies"/>
        </instance>

        <collection id="specificDc"
                    class="com.vn.rm.rolemanage.specificfragment.SpecificNode"/>
    </data>

    <content>
        <vbox id="root" spacing="true" padding="true">
            <hbox spacing="10px" classNames="mb-m">
                <checkbox id="allowAllSpecific" label="Allow all permissions"/>
            </hbox>
            <treeDataGrid id="specificTree"
                          width="100%"
                          dataContainer="specificDc"
                          hierarchyProperty="children">

                <columns>
                    <column property="name"
                            header="Permission"
                            />
                </columns>

            </treeDataGrid>

        </vbox>
    </content>

</fragment>
